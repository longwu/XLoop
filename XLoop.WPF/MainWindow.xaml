<Window x:Class="XLoop.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="260"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <ListBox x:Name="lsb" Height="240" Width="400" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0"/>
        
        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Center">
            <Button x:Name="btnStart" Content="启动" Height="30" Padding="10 5" Margin="0 0 10 0"/>
            <Button x:Name="btnStop" Content="停止" Height="30" Padding="10 5" Margin="0 0 10 0"/>
            <Button x:Name="btnError" Content="异常" Height="30" Padding="10 5" Margin="0 0 10 0"/>
        </StackPanel>
    </Grid>
</Window>
